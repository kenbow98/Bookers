<h1>Books</h1

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show",book_path(book.id),class: "show_#{book.id}" %></td>
        <td><%= link_to "Edit",edit_book_path(book.id),class: "edit_#{book.id}" %></td>
        <td><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ",class: "destroy_#{book.id}" %></td>
      </tr>
  </tbody>
    <% end %>

  </tbody>


<%= form_with model: @book, url: '/books', method: :post do |f| %>


</table>


<h2>New Book</h2>
  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>
<% end %>